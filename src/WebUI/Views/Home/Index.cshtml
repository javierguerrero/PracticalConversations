@model WebUI.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Practical English Conversations</h1>
    <p>
        Improve your English skills with short conversations generated by Artificial Intelligence (AI).
    </p>
</div>

<form asp-controller="Home" asp-action="Index" method="post">
    <div class="mb-3">
        <label class="form-label">Category</label>
        <select id="categoryId" class="form-select" asp-items="Model.CategoryList" asp-for="SelectedCategory" onchange="FillQuestions(this, 'questionId')">
            <option value="-1">-- Select a category --</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Question</label>
        <select id="questionId" class="form-select" asp-items="Model.QuestionList" asp-for="SelectedQuestion">
            <option value="-1">-- Select a question --</option>
        </select>
    </div>
    <div class="mb-3">
        <button type="submit" id="submit" class="btn btn-primary">
            Generate conversation
        </button>
    </div>
</form>


<div id="loading" style="display:none">
    <img src="~/img/spinner-1s-200px.gif" width="100" />
    <p class="message">
        Please wait while we generate the conversation using <strong>Artificial Intelligence (AI)</strong>. <br />
        Thank you for your patience!
    </p>
</div>


<script>
    $(document).ready(function () {
        $('form').submit(function () {
            $('#loading').show();
            $(this).hide();
        });

        $("#submit").click(function () {
            if ($("#categoryId").val() == "-1") {
                alert("Please, select a category.");
                return false;
            }
        });


    });
</script>

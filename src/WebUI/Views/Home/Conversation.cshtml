@model WebUI.ViewModels.ConversationViewModel
@{
    ViewData["Title"] = "Conversation";
}

<div class="text-center">
    <h1 class="display-4">Practical English Conversations</h1>
    <p>
        Improve your English skills with short conversations generated by Artificial Intelligence (AI).
    </p>
</div>

<div class="mb-3">
    <div class="alert alert-primary" role="alert">
        <strong>Category:</strong> @Model.Category <br />
        <strong>Question:</strong> @Model.Question
    </div>
</div>

<div class="mb-3" style="white-space:pre-line;">
    @foreach (var turn in Model.Conversation.Turns)
    {
        <div class="line">
            @turn.Speaker: <span data-message="@turn.Message">@turn.Message</span> 
@*            <button type="button" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-play"></span> Play
            </button>*@
        </div>
    }
</div>